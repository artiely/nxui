    "px2rem": "^0.5.0",
    "px2rem-loader": "^0.1.9",
    "showdown": "^1.8.7",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^3.0.0",
    "@huiji/vue-cli-plugin-markdown": "^1.0.3",
